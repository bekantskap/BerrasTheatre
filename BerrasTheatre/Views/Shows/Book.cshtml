@model BerrasTheatre.Models.Show

@{
    ViewData["Title"] = "Book";
}

<h1>Book your tickets</h1>

<div class="bookingtext">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Show Start
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            Remaining Seats
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemainingSeats)
        </dd>
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            Plot
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Info)
        </dd>
        <dt class="col-sm-2">
            Salon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.Id)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @ViewData["TicketPrice"] Sek
        </dd>
        <dd>
            @using (Html.BeginForm("Book"))
            {
                <input type="number" name="nrOfTickets" min="1" max=@ViewBag.RemainingSeats value="1" />
                <input type="submit" value="Book now" />

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
